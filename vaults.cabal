library
  hs-source-dirs:      lib
  exposed-modules:     Vaults.Base, Vaults.Substrate, Vaults.Udisksctl,
                       Vaults.Init, Vaults.MkPartition,
                       Vaults.Open, Vaults.Close,
                       Vaults.Operations, Vaults.MultiOperations,
                       Vaults.CustomCfg
  -- other-modules:
