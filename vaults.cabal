  default-language:    Haskell2010
  build-depends:       base, directory, filepath, process, mtl, extra

executable vault
  hs-source-dirs:      exe
  main-is:             Main.hs
  -- other-extensions:
  build-depends:       base, vaults, filepath, optparse-applicative,
                       process, directory, mtl
  other-modules:       SubstrateIO, CLI, CLIHelp
  default-language:    Haskell2010

test-suite vaults-test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Test.hs
  other-modules:       MockSubstrate, DummyValues, Assertions,
                       TestBase,
                       TestUdisksctl,
                       TestMkPartition,
                       TestInit,
                       TestOpen,
                       TestClose,
                       TestOperations_Edit,
                       TestOperations_ShellPartition,
                       TestOperations_Sync,
                       TestOperations_SyncEdit,
                       TestOperations_Up,
                       TestMultiOperations
  build-depends:       base, vaults,
                       HUnit, mtl
